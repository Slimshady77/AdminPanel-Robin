                                <form method="post" action="/update-selected-course" enctype="multipart/form-data">
                                    <div class="col-md-12 m-b-30">
                                      <!-- begin page title -->
                                      <div class="col-lg-12">
                                        <% if (data.length > 0) { %>
                                          <div class="table-responsive">
                                            <table class="table table-dark">
                                              <thead>
                                                <tr>
                                                  <th style="color: blue;">Select</th>
                                                  <th style="color: blue;">Course/Program Name</th>
                                                  <th style="color: blue;">Price</th>
                                                  <th style="color: blue;">Photo</th>
                                                  <th style="color: blue;">Actions</th>
                                                </tr>
                                              </thead>
                                              <tbody>
                                                <% for (var i = 0; i < data.length; i++) { %>
