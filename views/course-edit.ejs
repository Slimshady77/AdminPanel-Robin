                                                    <td>
                                                      <input type="checkbox" name="selectedItems[]" value="<%= data[i]._id %>">
                                                      
                                                    </td>
                                                    <td>
                                                      <input type="text" value="<%= data[i].file_name %>" name="file_name">
                                                    </td>
                                                    <td>
                                                      <input type="text" value="<%= data[i].price %>" name="price">
                                                    </td>
                                                    
                                                    <td>
                                                      <img src="/course-list/<%= data[i].Photo %>" alt="" style="width: 100px; height: 100px;">
                                                      <input type="file" name="Photo">
                                                    </td>
                                                 
                                  
                                                    <td>
                                                      <a href="/delete/<%= data[i]._id %>"><i class="nav-icon ti ti-trash"></i></a>
                                                    </td>
                                                    <td>
                                      <button type="submit" class="btn btn-primary">Update</button>
  
                                                    </td>
                                                  </tr>
                                                <% } %>
                                              </tbody>
                                            </table>
                                          </div>
                                        <% } else { %>
